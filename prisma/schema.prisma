generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Article {
  id        String   @id @default(cuid())
  title     String
  content   String
  status    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Configuration {
  id    String @id @default(cuid())
  key   String @unique
  value String
}
